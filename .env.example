# Shopware Docker Environment Configuration
# Copy this file to .env and customize for your development environment

# =============================================================================
# SHOPWARE DOCKER SETTINGS
# =============================================================================

# Enable/disable automatic permission handling
# Set to false on Windows/macOS or if you prefer manual control
SHOPWARE_DOCKER_AUTO_PERMISSIONS=true

# Manual UID/GID override (usually not needed)
# Use 'auto' for automatic detection or specific numbers
SHOPWARE_DOCKER_HOST_UID=auto
SHOPWARE_DOCKER_HOST_GID=auto

# Enable debug logging to troubleshoot permission issues
SHOPWARE_DOCKER_DEBUG=false

# =============================================================================
# STANDARD DOCKWARE CONFIGURATION
# =============================================================================

# Xdebug Configuration
XDEBUG_ENABLED=1
XDEBUG_CONFIG=client_host=host.docker.internal
PHP_IDE_CONFIG=serverName=shopware-docker

# PHP Configuration
PHP_VERSION=8.2
OPCACHE_ENABLED=0  # Disable in development, enable in production

# Composer Configuration
COMPOSER_VERSION=2

# Node.js Configuration
NODE_VERSION=20

# =============================================================================
# SHOPWARE CONFIGURATION
# =============================================================================

# Application Environment
APP_ENV=dev
APP_SECRET=your-secret-key-here

# Database Configuration (if using external database)
DATABASE_URL=mysql://shopware:shopware@db:3306/shopware

# Redis Configuration (if using external Redis)
REDIS_URL=redis://redis:6379

# Elasticsearch Configuration (if using external Elasticsearch)
OPENSEARCH_URL=http://elasticsearch:9200

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Mailhog (included in dockware)
MAILHOG_ENABLED=1

# Adminer (included in dockware)
ADMINER_ENABLED=1

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# PHP Memory Limit
PHP_MEMORY_LIMIT=512M

# Max Upload Size
PHP_UPLOAD_MAX_FILESIZE=128M
PHP_POST_MAX_SIZE=128M

# =============================================================================
# CONTAINER SETTINGS
# =============================================================================

# Container name prefix
COMPOSE_PROJECT_NAME=shopware-docker

# Timezone
TZ=Europe/Berlin

# =============================================================================
# PORT MAPPINGS (uncomment to override defaults)
# =============================================================================

# HTTP_PORT=80
# HTTPS_PORT=443
# MYSQL_PORT=3306
# MAILHOG_SMTP_PORT=1025
# MAILHOG_WEB_PORT=8025
# ADMINER_PORT=8080

# =============================================================================
# VOLUME MAPPINGS
# =============================================================================

# Plugin development path
PLUGIN_PATH=./src

# Custom files path  
CUSTOM_PATH=./custom

# Files/media path
FILES_PATH=./files

# Log files path
LOG_PATH=./var/log

# Configuration path
CONFIG_PATH=./config